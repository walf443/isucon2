# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /artist/:artist_id          controllers.Artist.show(artist_id: Long)
GET     /ticket/:ticket_id          controllers.Ticket.show(ticket_id: Long)
POST    /buy                        controllers.Ticket.buy()

GET     /admin                      controllers.Admin.index()
POST    /admin                      controllers.Admin.init_data()
GET     /admin/order.csv            controllers.Admin.download_order_csv()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /js/*file                   controllers.Assets.at(path="/public/js", file)
GET     /css/*file                  controllers.Assets.at(path="/public/css", file)
GET     /images/*file               controllers.Assets.at(path="/public/images", file)
